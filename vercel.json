{
  "version": 2,
  "installCommand": "npm install",
  "buildCommand": "cd backend && npm run build && cd ../frontend && npm run build",
  "outputDirectory": "frontend/dist",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/index" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}

